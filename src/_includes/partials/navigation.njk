	   {% set navPages = collections.all | eleventyNavigation %}
  <nav class="mt-0 w-full md:container mx-auto flex items-center">
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <div class="text-sm mx-auto text-gray-100">
          <h2 class="text-4xl serif mb-11"><span class="bg-blue-500 serif pr-5 pl-5">{{ site.title }}</span></h2>
       <p class="text-2xl text-gray-500 w-9/12 p-2 md:p-0 pb-5 ">{{ site.description }}</p>
         <ul class="mt-6 list-reset flex md:block border-t-2 border-gray-200">
         {%- for entry in navPages %}
          <li>
          <a class="p-2 pb-8 md:p-5 md:w-full inline-block md:block hover:bg-gray-200 md:border-l-2 border-gray-100 md:hover:border-gray-500 text-gray-800 {% if entry.url == page.url %}bg-yellow-100 md:border-l-2 border-yellow-500{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
           </li>
                {%- endfor %}
             </ul>
             </div>
   </nav>

